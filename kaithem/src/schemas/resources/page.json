{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Generated schema for Root",
    "type": "object",
    "properties": {
        "allow-origins": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "These origins will be allowed to XSS the page"
        },
        "allow-xss": {
            "type": "boolean",
            "description": "whether to allow XSS at all."
        },
        "auto-reload": {
            "type": "boolean",
            "description": "Inserts a header causing auto-refresh"
        },
        "auto-reload-interval": {
            "type": "number"
        },
        "dont-show-in-index": {
            "type": "boolean",
            "description": "Legacy, no longer used",
            "deprecated": true
        },
        "mimetype": {
            "type": "string"
        },
        "no-header": {
            "type": "boolean"
        },
        "no-navheader": {
            "type": "boolean"
        },
        "require-method": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "require-permissions": {
            "type": "array",
            "items": {}
        },
        "resource-timestamp": {
            "type": "number"
        },
        "resource-type": {
            "type": "string",
            "pattern": "page"
        },
        "alt-top-banner": {
            "type": "string"
        },
        "streaming-response": {
            "type": "boolean"
        },
        "template-engine": {
            "type": "string"
        },
        "theme-css-url": {
            "type": "string"
        },
        "resource-loadedfrom": {
            "type": "string"
        },
        "body": {
            "type": "string",
            "description": "The actual content or template. Saved in it's own section, not the metadata header."
        },
        "code": {
            "type": "string",
            "description": "Per-reload code. Saved in it's own section"
        },
        "setupcode": {
            "type": "string",
            "description": "Per-reload code. Saved in it's own section"
        },
        "versions":{
            "type": "object",
            "description": "Used to store old versions of the file.  Should not actually be saved."
        }
    },
    "required": [
        "resource-type",
        "body"
    ],
    "additionalProperties": false
}