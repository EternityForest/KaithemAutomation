{
    "python.pythonPath": "/usr/bin/python3",

    "files.exclude": {
        "helpers/debianpackaging/package/usr/**": true,
        ".mypy_cache": true,
        "kaithem/src/__pycache__": true
    },
    "files.watcherExclude": {
        "helpers/debianpackaging/package/usr": true,
        ".mypy_cache": true,
        "kaithem/src/__pycache__": true,
        "kaithem/src/docs/thirdparty/python**": true,
        "kaithem/src/js/vs**": true,
        "kaithem/src/js/src-min-noconflict**": true,
        "kaithem/data/static/img/icons/**": true,
        "kaithem/src/thirdparty": true
    },
    "python.autoComplete.extraPaths": [
        "kaithem/src/thirdparty",
        "kaithem/src/docs/thirdparty/python**"
    ],
    "python.analysis.extraPaths": [
        "kaithem/src/docs/thirdparty/"
    ],
    "editor.formatOnSave": false,
    "editor.formatOnType": true,
    "html.format.templating": true,
    "pylint.args": [
        " \"--max-line-length=120\""
    ],

    "LineCount.includes": [
        "**/kaithem/src/**"
        ],

    "LineCount.excludes": [
            "**/.vscode/**",
            "**/thrdparty/**",
            "**/.buildozer/**",
            "**/.venv/**",
            "**/.isolated_venv/**"
            ],
            "python.testing.pytestEnabled": true,
            "python.testing.cwd": "",
            "cSpell.allowCompoundWords": true,
            "cSpell.words": [
                "astype",
                "bytesio",
                "currentcueid",
                "damerau",
                "DGRAM",
                "dtype",
                "enttec",
                "Fadein",
                "goto",
                "hfader",
                "kaithem",
                "kaithemobj",
                "mqtt",
                "Mqtt",
                "recalc",
                "REUSEADDR",
                "rtmidi",
                "testid",
                "tobytes",
                "Vals",
                "vueapp"
            ]

}