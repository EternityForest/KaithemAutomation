{
    "python.pythonPath": "/usr/bin/python3",
    "python.linting.pylintArgs": [
        "--rcfile",
        "${workspaceFolder}\\.pylintrc"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "files.exclude": {
        "helpers/debianpackaging/package/usr/**": true,
        ".mypy_cache": true,
        "kaithem/src/__pycache__": true,
    },
    "files.watcherExclude": {
        "helpers/debianpackaging/package/usr": true,
        ".mypy_cache": true,
        "kaithem/src/__pycache__": true,
        "kaithem/src/docs/thirdparty/python**": true,
        "kaithem/src/js/vs**": true,
        "kaithem/src/js/src-min-noconflict**": true,
        "kaithem/data/static/img/icons/**": true,
        "kaithem/src/thirdparty": true
    },
    "python.autoComplete.extraPaths": [
        "kaithem/src/thirdparty",
        "kaithem/src/docs/thirdparty/python**"
    ],
    "python.analysis.extraPaths": [
        "kaithem/src/docs/thirdparty/"
    ],
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "python.linting.banditEnabled": true,
    "python.formatting.autopep8Args": [
        "--ignore",
        "E402"
    ]
}